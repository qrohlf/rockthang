<form class="form-horizontal" role="form" method="GET">
  <div class="form-group">
    <label for="difficulty" class="col-sm-2 control-label">Max Difficulty</label>
    <div class="col-sm-3">
        <select class="form-control" id="difficulty" name="difficulty">
            <% (1...37).each do |i| %>
                <option value="<%= i %>"<%=" selected" if i==params["difficulty"].to_i%>><%= Pitch.difficulty_to_rating(i) %></option>
            <% end %>
        </select>
    </div>
  </div>
  <div class="form-group">
    <label for="length" class="col-sm-2 control-label">Ticklist Length</label>
    <div class="col-sm-1">
      <input type="number" class="form-control" id="length" name="length" value="<%= params["length"] %>">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Find Me A Ticklist!</button>
    </div>
  </div>
</form>